{
  "name": "validate_response",
  "description": "Validates the response format and content",
  "parameters": {
    "type": "object",
    "properties": {
      "work_order": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["id", "description"]
      },
      "assessments": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "assessment_id": { "type": "string" },
            "asset_client_id": { "type": "string" },
            "asset_name": { "type": "string" },
            "component": { "type": "string" },
            "confidence_score": { "type": "number" },
            "matching_reasoning": { "type": "string" },
            "is_repair": { "type": "boolean" },
            "repair_reasoning": { "type": "string" }
          },
          "required": [
            "assessment_id", 
            "asset_client_id", 
            "asset_name", 
            "component", 
            "confidence_score", 
            "matching_reasoning",
            "is_repair",
            "repair_reasoning"
          ]
        }
      }
    },
    "required": ["work_order", "assessments"]
  }
}